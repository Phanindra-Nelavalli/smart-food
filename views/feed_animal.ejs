<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Feed Animal</title>
    <link rel="stylesheet" href="/static/WasteFoodManagement.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.7.6/lottie.min.js"></script>
  </head>
  <body>
    <%-include('nav')-%>
    <main>
      <h2>Feed Animal</h2>
      <div class="card-container">
       
        <!-- Form section -->
        <div class="form-section">
          <form id="animalForm" action="/route/feed_animal" method="post">
            <label for="animal-name">Animal Name:</label>
            <input
              type="text"
              id="animal-name"
              name="animal-name"
              required
            /><br />
            <label for="owner-name">Owner Name:</label>
            <input
              type="text"
              id="owner-name"
              name="owner-name"
              required
            /><br />
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" required /><br />
            <label for="contact">Contact:</label>
            <input type="text" id="contact" name="contact" required /><br />
            <label for="email">Email Address:</label>
            <input type="email" id="email" name="email" required /><br />
            <button type="submit">Submit</button>
          </form>
        </div>

        <!-- Lottie animation section -->
      </div>
    </main>
    <script>
      // Lottie animation
      var animation = lottie.loadAnimation({
        container: document.getElementById("lottie-animation"), // The container where animation will render
        renderer: "svg",
        loop: true,
        autoplay: true,
        path: "https://lottie.host/your-lottie-url.json", // Replace with your Lottie animation URL
      });
    </script>
  </body>
</html>
